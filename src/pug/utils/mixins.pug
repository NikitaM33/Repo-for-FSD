mixin navLink(link, name, last)
    li
        if(last)
            a(href=link).nav-link.last-link=name
        else
            a(href=link).nav-link=name


mixin headerNav(link, name)
    li
        if(name == "Услуги" || name == "Соглашения")
            a(href=link)=name
                span
                    <svg width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M10.5938 0.578125L12 1.98438L6 7.98438L0 1.98438L1.40625 0.578125L6 5.17188L10.5938 0.578125Z" fill="#1F2041" fill-opacity="0.4"/>
                    </svg>
            
        else   
            a(href=link)=name
